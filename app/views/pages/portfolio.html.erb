<script>
// Animate dials when in viewport
const observerOptions = {
  threshold: 0.3,
  rootMargin: '0px'
};

const dialObserver = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting && !entry.target.classList.contains('animated')) {
      animateDial(entry.target);
      entry.target.classList.add('animated');
    }
  });
}, observerOptions);

document.querySelectorAll('.metric-dial').forEach(dial => {
  dialObserver.observe(dial);
});

function animateDial(dial) {
  const targetValue = parseFloat(dial.getAttribute('data-value'));
  const suffix = dial.getAttribute('data-suffix') || '';
  const valueElement = dial.querySelector('.dial-value');
  const progressCircle = dial.querySelector('.dial-progress');
  
  const circumference = 2 * Math.PI * 85;
  progressCircle.style.strokeDasharray = circumference;
  progressCircle.style.strokeDashoffset = circumference;
  
  const duration = 2000;
  const startTime = performance.now();
  
  function update(currentTime) {
    const elapsed = currentTime - startTime;
    const progress = Math.min(elapsed / duration, 1);
    
    const easeOutCubic = 1 - Math.pow(1 - progress, 3);
    const currentValue = targetValue * easeOutCubic;
    
    // Update number
    if (targetValue > 1000) {
      valueElement.textContent = Math.floor(currentValue).toLocaleString() + suffix;
    } else if (targetValue > 100) {
      valueElement.textContent = Math.floor(currentValue) + suffix;
    } else {
      valueElement.textContent = currentValue.toFixed(2) + suffix;
    }
    
    // Update circle (max 270 degrees = 75% of circle)
    const maxProgress = 0.75;
    const normalizedValue = Math.min(targetValue / 500, 1);
    const offset = circumference - (circumference * normalizedValue * maxProgress * easeOutCubic);
    progressCircle.style.strokeDashoffset = offset;
    
    if (progress < 1) {
      requestAnimationFrame(update);
    }
  }
  
  requestAnimationFrame(update);
}

// Animate highlight numbers
const highlightObserver = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting && !entry.target.classList.contains('counted')) {
      const target = parseFloat(entry.target.getAttribute('data-count'));
      const element = entry.target;
      const suffix = element.textContent.replace(/[0-9.]/g, '');
      
      let current = 0;
      const duration = 2000;
      const increment = target / (duration / 16);
      
      const counter = setInterval(() => {
        current += increment;
        if (current >= target) {
          element.textContent = target + suffix;
          clearInterval(counter);
        } else {
          if (target >= 10) {
            element.textContent = Math.floor(current) + suffix;
          } else {
            element.textContent = current.toFixed(1) + suffix;
          }
        }
      }, 16);
      
      entry.target.classList.add('counted');
    }
  });
}, { threshold: 0.5 });

document.querySelectorAll('.highlight-number').forEach(number => {
  highlightObserver.observe(number);
});
</script>
